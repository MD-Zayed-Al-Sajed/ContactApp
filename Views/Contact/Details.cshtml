@model ContactApp.Models.Contact

@{
    ViewBag.Title = "Contact Details";
}

<h2>Contact Details</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>First Name</th>
        <td>@Html.DisplayFor(model => model.FirstName)</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Html.DisplayFor(model => model.LastName)</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Html.DisplayFor(model => model.Email)</td>
    </tr>
    <tr>
        <th>Phone Number</th>
        <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
    </tr>
    <tr>
        <th>Category</th>
        <td>
            @if (Model.Category != null)
            {
                @Html.DisplayFor(model => model.Category.Name)
            }
            else
            {
                <span class="text-muted">No Category Assigned</span>
            }
        </td>
    </tr>
    <tr>
        <th>Date Added</th>
        <td>@Model.DateAdded.ToShortDateString()</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to List</a>
</div>
